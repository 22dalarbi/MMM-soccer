{
  "extends": "airbnb-base",
  "rules": {
    "comma-dangle": 0,
	"indent": ["error", 4],
    "max-len": ["error", 120, { "ignoreStrings": true }],
    "radix": ["error", "as-needed"]
  },
  "settings": {
    "import/core-modules": [ "node_helper" ]
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  }
}